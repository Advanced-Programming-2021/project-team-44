<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphics.main_menu_subPages.importexport_menu_subPages.ImportPage"
            prefHeight="900.0" prefWidth="1600.0">

    <ImageView pickOnBounds="true" smooth="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Image url="@../../../graphics/menus_backgrounds/mainMenuPageBackground.png"/>
    </ImageView>

    <VBox alignment="CENTER" prefHeight="900.0" prefWidth="500.0" spacing="50.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="27.0" AnchorPane.topAnchor="0.0">
        <Label alignment="CENTER" prefHeight="50.0" prefWidth="350.0" text="Import"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" stylesheets="@../../../graphics/css_styles/label_style.css"
               styleClass="label_register_menu_title">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Path" stylesheets="@../../../graphics/css_styles/label_style.css"
                   styleClass="label_register_text_box">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="pathField" promptText="Path To File">
                <font>
                    <Font size="18.0"/>
                </font>
            </TextField>
        </HBox>
        <Button mnemonicParsing="false" text="Import" stylesheets="@../../../graphics/css_styles/button_style.css"
                onMouseClicked="#importHandler"
                styleClass="button_login_menu_page" prefWidth="150" prefHeight="30">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </VBox>


    <Button layoutX="25.0" layoutY="840.0" mnemonicParsing="false" text="Back" styleClass="button_back_button"
            stylesheets="@../../../graphics/css_styles/button_style.css" onMouseClicked="#redirectToImportExportMenu"/>

</AnchorPane>
