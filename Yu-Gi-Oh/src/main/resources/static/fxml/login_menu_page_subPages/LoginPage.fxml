<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.login_menu_subPages.LoginPage">

    <ImageView pickOnBounds="true" smooth="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Image url="@../../graphics/menus_backgrounds/loginPageBackground.jpg"/>
    </ImageView>
    <VBox alignment="CENTER" prefHeight="900.0" prefWidth="500.0" spacing="50.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="27.0" AnchorPane.topAnchor="0.0">
        <Label alignment="CENTER" prefHeight="50.0" prefWidth="350.0" text="Login"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" stylesheets="@../../graphics/css_styles/label_style.css"
               styleClass="label_register_menu_title">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Username:" stylesheets="@../../graphics/css_styles/label_style.css"
                   styleClass="label_register_text_box">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="usernameField" promptText="Username">
                <font>
                    <Font size="18.0"/>
                </font>
            </TextField>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Label text="Password:" stylesheets="@../../graphics/css_styles/label_style.css"
                   styleClass="label_register_text_box">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Password">
                <font>
                    <Font size="18.0"/>
                </font>
            </PasswordField>
        </HBox>
        <Button mnemonicParsing="false" text="Login" stylesheets="@../../graphics/css_styles/button_style.css"
                onMouseClicked="#loginSubmitHandler"
                styleClass="button_login_menu_page" prefWidth="150" prefHeight="30">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </VBox>
    <Button layoutX="25.0" layoutY="840.0" mnemonicParsing="false" text="Back" styleClass="button_back_button"
            stylesheets="@../../graphics/css_styles/button_style.css" onMouseClicked="#redirectToLoginMenu"/>
</AnchorPane>
